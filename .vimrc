set nocompatible
set incsearch
set ignorecase
set smartcase
set scrolloff=3
set wildmode=longest,list

set shiftwidth=4
set softtabstop=4
set tabstop=4
set expandtab

set autoindent
set ruler
set list listchars=tab:▸\ ,trail:·
set hlsearch
syntax on                       " syntax highlighting
filetype plugin on              " use the file tupe plugins

